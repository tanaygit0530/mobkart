<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheet/mobshow.css">
<link rel="stylesheet" href="/stylesheet/starability.css">
<div class="container py-4">
  <div class="row align-items-center">
    <!-- Image Section -->
    <div class="col-md-5 text-center mb-4 mb-md-0">
         <% if (laptop.images && laptop.images.length > 0) { %>
          <% laptop.images.forEach(image => { %>
            <img src="<%= image.url %>" alt="<%= laptop.model %>" class="img-fluid rounded border border-info mb-3" style="max-height: 300px;">
          <% }) %>
        <% } else { %>
          <p class="text-muted">No image available</p>
        <% } %> 
      <% if (laptop.author && currentUser && laptop.author.equals(currentUser._id)) { %>
        <div class="d-grid  mt-3 gap-2">
          <a href="/mobkart/laptop/<%= laptop._id %>/edit" class="btn btn-outline-info rounded-pill d-grid">Edit</a>
          <form action="/mobkart/laptop/<%= laptop._id %>?_method=DELETE" method="POST" class="d-grid">
            <button type="submit" class="btn btn-outline-danger rounded-pill">Delete</button>
          </form>
        </div>
      <% } %>
            <form action="/mobkart/laptop/cart/<%= laptop._id %>/add" method="POST" class="mt-3">
                <div class="d-grid">
                  <button type="submit" class="btn btn-outline-warning rounded-pill" style="border-radius: 40px;">
                    Add to Cart
                  </button>
                  </div>
      </form>
    </div>

    <div class="col-md-7">
      <h2 class="mb-3 fw-bold"><span class="text-muted fs-5">(<%= laptop.model %>)</span></h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Brand:</strong> <%= laptop.brand %></li>
        <li class="list-group-item"><strong>Price:</strong> ₹<%= laptop.price %></li>
        <li class="list-group-item"><strong>Processor Tier:</strong> <%= laptop.processortier %></li>
        <li class="list-group-item"><strong>Processor Brand:</strong> <%= laptop.processorbrand %></li>
        <li class="list-group-item"><strong>RAM Memory:</strong> <%= laptop.rammemmory %> GB</li>
        <li class="list-group-item"><strong>Primary Storage Type:</strong> <%= laptop.primarystoragetype %></li>
        <li class="list-group-item"><strong>Storage Capacity:</strong> <%= laptop.storagecapacity %> GB</li>
        <li class="list-group-item"><strong>GPU Brand:</strong> <%= laptop.gpubrand %></li>
        <li class="list-group-item"><strong>Touchscreen:</strong> <%= laptop.istouchscreen ? 'Yes' : 'No' %></li>
        <li class="list-group-item"><strong>Display Size:</strong> <%= laptop.displaysize %> inch</li>
        <li class="list-group-item"><strong>Resolution:</strong> <%= laptop.resolutionwidth %> x <%= laptop.resolutionheight %></li>
        <li class="list-group-item"><strong>Operating System:</strong> <%= laptop.os %></li>
        <li class="list-group-item"><strong>Warranty:</strong> <%= laptop.warranty %> year(s)</li>
      </ul>
    </div>
  </div>
    <div class="mt-5">
    <h4 class="fw-bold mb-3 text">Review</h4>
    <form action="/mobkart/laptop/<%= laptop._id %>/reviews" method="POST">
      <div class="mb-3">
        <label for="body" class="form-label">Write your review here...</label>
        <textarea class="form-control effect" id="body" name="review[body]" rows="3" required></textarea>
      </div>
    <h3>Rating:</h3>
        <fieldset class="starability-coinFlip mt-2">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <button class="btn btn-dark btn-outline-info but">Submit Review</button>
    </form>
  </div>

  <!-- Reviews List -->
  <div class="mt-4 ">
    <% if (laptop.reviews && laptop.reviews.length > 0) { %>
      <h5 class="fw-semibold mb-3 text">User Reviews:</h5>
      <% for (let review of laptop.reviews) { %>
        <div class="border p-3 rounded mb-3 bg-dark effect">
          <strong><%= review.author?.username || 'Anonymous' %></strong> – 
            <fieldset class="starability-result" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> stars
            </fieldset>
          <p class="mb-0 mt-2"><%= review.body %></p>
          <% if(currentUser && review.author.equals(currentUser._id)){ %>
          <form action="/mobkart/laptop/<%= laptop._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
          <% } %>
        </div>
      <% } %>
    <% } else { %>
      <p class="text-muted">No reviews yet. Be the first to review!</p>
    <% } %>
  </div>
</div>
