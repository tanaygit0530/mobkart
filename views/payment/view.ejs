<% layout('layout/boilerplate') %>

<!-- Optional: Add this custom CSS for glowing effect -->
<style>
  body {
    background-color: #0e1117;
    color: #ffffff;
  }

  .glow-card {
    background-color: #161b22;
    border: 1px solid rgba(0, 255, 255, 0.2);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
    border-radius: 15px;
  }

  .glow-title {
    color: #00ffff;
    text-shadow: 0 0 5px #00ffff;
  }
</style>

<div class="container mt-5">
  <div class="glow-card p-4">
    <h1 class="text-center glow-title mb-4">Complete Your Payment</h1>

    <h4 class="text-info">Order Summary</h4>
    <ul class="list-group mb-3">
      <% cart.forEach(item => { %>
        <li class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center">
          <%= item.product.name %>
          <span>₹<%= item.product.price %></span>
        </li>
      <% }) %>
      <li class="list-group-item bg-dark text-white d-flex justify-content-between font-weight-bold border-top pt-2">
        <span>Total:</span>
        <span>₹<%= total %></span>
      </li>
    </ul>

    <!-- Payment Method -->
    <form action="/placeorder" method="POST" class="mt-4">
      <h4 class="mb-3">Card Details</h4>
      <div class="mb-3">
        <label class="form-label">Cardholder Name</label>
        <input type="text" name="cardName" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Card Number</label>
        <input type="text" name="cardNumber" maxlength="16" class="form-control" required />
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Expiry Date</label>
          <input type="text" name="expiry" placeholder="MM/YY" class="form-control" required />
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">CVV</label>
          <input type="text" name="cvv" maxlength="3" class="form-control" required />
        </div>
      </div>
      <button type="submit" class="btn btn-primary w-100 mt-3">
        Pay ₹<%= total %>
      </button>
    </form>

    <div class="text-center mt-4">
      <a href="/mobakart/mobile/cart" class="text-decoration-none text-light">← Go back to cart</a>
    </div>

  </div>
</div>
